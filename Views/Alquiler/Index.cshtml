    ViewData["Title"] = "Index";
}

<h1>Alquilar</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.txt_desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio_alquiler)
            </th>
            <th>
                Stock
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.txt_desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio_alquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cant_disponibles_alquiler)
